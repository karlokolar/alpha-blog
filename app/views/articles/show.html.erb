<h2 align="center">Title: <%= @article.title%> </h2>

<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><bold>Description:</bold></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-danger" %>
    <%= link_to "Delete", article_path(@article), action: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-warning" %>
    <%= link_to "Index", articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>